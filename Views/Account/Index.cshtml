@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>
<div class="tt-topic-list tt-offset-top-30">

    <div class="tt-list-header tt-border-bottom">
        <div class="tt-col-topic">Name</div>
        <div class="tt-col-category">Email</div>
        <div class="tt-col-category">Department</div>
        <div class="tt-col-value hide-mobile">Edit</div>
        <div class="tt-col-value hide-mobile">Delete</div>
    </div>

    @foreach (var user in Model)
    {
        <div class="tt-item">
            <div class="tt-col-avatar">
                <svg class="tt-icon">
                    <use xlink:href="#icon-ava-n"></use>
                </svg>
            </div>
            <div class="tt-col-description">
                <h6 class="tt-title">
                    <a asp-action="EditUser" asp-controller="Account"
                       asp-route-id="@user.Id">
                        @user.Name
                    </a>
                </h6>
                <div class="row align-items-center no-gutters hide-desktope">
                    <div class="col-auto">
                        <ul class="tt-list-badge">
                            <li class="show-mobile">
                                <a href="#"><span class="tt-color05 tt-badge">bug.SubCat.SubCatName</span></a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-auto ml-auto show-mobile">
                        <div class="tt-value">1d</div>
                    </div>
                </div>
            </div>
            <div class="tt-col-category">
                <span class="tt-color03 tt-badge">@user.Email</span>
            </div>
            <div class="tt-col-category">
                <span class="tt-color05 tt-badge">@user.Dept</span>
            </div>

            <div class="tt-col-value tt-color-select hide-mobile">
                <a class="fa fa-pencil-square-o" aria-hidden="true" style="color:dodgerblue;font-size: 25px;" asp-action="EditUser" asp-controller="Account"
                   asp-route-id="@user.Id"></a>
            </div>
            <div class="tt-col-value tt-color-select hide-mobile">
                <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <button type="submit" class="fa fa-trash" style="color:red;font-size: 20px;" aria-hidden="true"
                            onclick="return confirm('Are you sure you want to delete this user?')">
                    </button>
                </form>
            </div>

        </div>
    }
<div class="tt-row-btn">
    <a  asp-controller="Account" asp-action="Register" class="fa fa-plus"
       aria-hidden="true"
       style="color: dodgerblue; font-size: 35px"></a>
</div>
</div>


